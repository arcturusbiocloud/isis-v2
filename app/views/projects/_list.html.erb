<% @projects.each do |project| %>
  <div class="row project">
    <div class="col-xs-1">
      <%= link_to image_tag(project.icon_url_path, class: "img-responsive #{icon_class(project)}"), project_path(project) %>
    </div>
    <div class="col-xs-4 description">
      <h4>
        <% unless project.is_public? %>
          <%= fa_icon "lock", class: 'project-visibility' %>
        <% end %>
        <% if project.pending? %>
          <%= fa_icon "circle-o-notch", class: 'project-pending', title: "Pending", "data-toggle" => "tooltip" %>
        <% elsif project.running? %>
          <%= fa_icon "cog spin", class: 'project-running', title: "Running", "data-toggle" => "tooltip" %>
        <% else %>
          <%= fa_icon "check-square-o", class: 'project-completed', title: "Completed", "data-toggle" => "tooltip" %>
        <% end %>
        <%= link_to project.name, project_path(project) %>
      </h4>
      <p><%= project.description %></p>
    </div>
    <div class="col-xs-7">
      <ul class="actions">
        <li><%= link_to "Timeline", project_path(project, tab: "timeline") %></li>
        <li><%= link_to "Design", project_path(project, tab: "design") %></li>
        <li><%= link_to "Pictures and data", project_path(project, tab: "pictures-and-data") %></li>
      </ul>
    </div>
  </div>
<% end %>
