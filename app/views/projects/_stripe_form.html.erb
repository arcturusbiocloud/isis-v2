<br>

<% if flash.any? && !flash.first[1].blank? %>
  <div class="<%= flash_class(flash.first[0], false) %>">
    <%= flash.first[1] %>
  </div>
<% end %>

<%= form_for(project, html: { role: 'form' }) do |f| %>
  <script src="https://checkout.stripe.com/v2/checkout.js"
    class="stripe-button"
    data-label="Pay &amp; Start"
    data-email="<%= current_user.email %>"
    data-key="<%= Rails.application.secrets.stripe_publishable_key %>"
    data-description="<%= project.name %>"
    data-amount="<%= project.price * 100 %>">
  </script>
<% end %>
