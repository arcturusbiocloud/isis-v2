<%= form_for(@experiment, html: { class: "form-inline" }) do |f| %>
  <div class="row project">
    <div class="col-xs-12">
      <div class="form-group">
        <%= f.label :name, class: "sr-only" %>
        <%= f.text_field :name, placeholder: "Experiment name", class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row project">
    <div class="col-xs-12">
      <div class="form-group">
        <%= f.label :price, class: "sr-only" %>
        <%= f.number_field :price, placeholder: "Price", min: 0, max: 1000, class: "form-control" %>
      </div>
    </div>
  </div>

  <br>
  <div class="row project">
    <div class="col-xs-12">
      <%= f.submit value, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
