<div class="wrapper">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signin" }) do |f| %>
    <%= link_to image_tag("arcturus.png", width: "70", height: "66", alt: "Arcturus BioCloud", class: "form-signin-logo"), root_path %>
    <p class="form-signin-lead">Welcome to Arcturus BioCloud</p>
    <% form_message_for(:sign_up, @user ? @user.errors : []) %>
    <%= render partial: "layouts/messages", locals: { default: false } %>
    <hr>
    <%= f.text_field :username, autofocus: true, placeholder: "Choose a username", class: "form-control" %>
    <%= f.email_field :email, placeholder: "Your email address", class: "form-control" %>
    <%= f.password_field :password, autocomplete: "off", placeholder: "Create a password", class: "form-control" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm your password", class: "form-control" %>
    <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block" %>
  <% end %>

  <div class="signup">
    <span>Already a member? <%= link_to "Sign in", new_session_path(resource_name) %></span>
  </div>
</div>
