<div class="wrapper">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-signin" }) do |f| %>
    <%= link_to image_tag("arcturus.png", width: "70", height: "66", alt: "Arcturus BioCloud", class: "form-signin-logo"), root_path %>
    <p class="form-signin-lead">Welcome to Arcturus BioCloud</p>
    <% form_message_for(:sign_up, @user ? @user.errors : []) %>
    <%= render partial: "layouts/messages", locals: { default: false } %>
    <hr>
    <%= f.email_field :email, autofocus: true, placeholder: "Your email address", class: "form-control" %>
    <%= f.submit "Send me the instructions", class: "btn btn-lg btn-primary btn-block" %>
  <% end %>

  <div class="signup">
    <span>Nevermind? <%= link_to "Sign in", new_session_path(resource_name) %> | <%= link_to "Sign up", new_registration_path(resource_name) %></span>
  </div>
</div>
